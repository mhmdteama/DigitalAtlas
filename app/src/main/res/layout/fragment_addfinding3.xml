<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.compubase.mhmd.digitalatlas.Addfinding3">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="0dp"
        android:background="#00bfff"
        android:theme="?attr/actionBarTheme">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Add Finding(s)"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="30sp" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">
            <EditText
                android:id="@+id/supervision"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:textColorHint="#000"
                android:inputType="text"
                android:hint="Supervision"
                android:padding="15dp"
                android:background="@drawable/rounded_edittext_focused"/>
            <Spinner
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:entries="@array/ages"
                android:layout_height="50dp"
                android:inputType="text"
                android:layout_margin="5dp"
                android:padding="15dp"
                android:background="@drawable/rounded_edittext_focused"/>
            >

            <Spinner
                android:id="@+id/gender"
                android:entries="@array/genders"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:inputType="text"
                android:padding="15dp"
                android:background="@drawable/rounded_edittext_focused"/>
            <Spinner
                android:id="@+id/system"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:entries="@array/systems"
                android:padding="15dp"
                android:background="@drawable/rounded_edittext_focused"/>
            <EditText
                android:textColorHint="#000"
                android:id="@+id/finding"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:inputType="text"
                android:hint="Finding"
                android:padding="15dp"
                android:background="@drawable/rounded_edittext_focused"/>
            <EditText
                android:id="@+id/required1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:inputType="text"
                android:textColorHint="#000"

                android:hint="Required Keywords"
                android:padding="15dp"
                android:background="@drawable/rounded_edittext_focused"/>
            <EditText
                android:id="@+id/required2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:textColorHint="#000"

                android:inputType="text"
                android:hint="Required Keywords"
                android:padding="15dp"
                android:background="@drawable/rounded_edittext_focused"/>
            <EditText
                android:id="@+id/required3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:textColorHint="#000"
                android:inputType="text"
                android:hint="Required Keywords"
                android:padding="15dp"
                android:background="@drawable/rounded_edittext_focused"/>
            <EditText
                android:id="@+id/required4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:inputType="text"
                android:hint="Required Keywords"
                android:textColorHint="#000"
                android:padding="15dp"
                android:background="@drawable/rounded_edittext_focused"/>
            <EditText
                android:id="@+id/optional1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:inputType="text"
                android:hint="Optional Keywords"
                android:padding="15dp"
                android:background="@drawable/rounded_edittext_focused"/>
            <EditText
                android:id="@+id/optional2"
                android:layout_width="match_parent"
                android:textColorHint="#000"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:inputType="text"
                android:hint="Optional Keywords"
                android:padding="15dp"
                android:background="@drawable/rounded_edittext_focused"/>
            <EditText
                android:id="@+id/abnormal"
                android:layout_width="match_parent"
                android:textColorHint="#000"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:inputType="text"
                android:hint="Abnormality"
                android:padding="15dp"
                android:background="@drawable/rounded_edittext_focused"/>
        </LinearLayout>
    </ScrollView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:hint="Scenario"
        android:gravity="top"
        android:background="@drawable/rounded_edittext_focused"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColorHint="#000"
        android:id="@+id/senario"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded_button"
        android:text="Next"
        android:textSize="30dp"
        android:textColor="#FFF"
        android:id="@+id/next"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />


</LinearLayout>
